$navbar-height = 60px

.navbar
  background-color $color-navbar
  color $color-text-primary
  material-shadow()
  .navbar-header
    float left
    font-size 2rem
    padding 10px
  ul
    display flex
    flex-wrap wrap
    list-style none
    margin 0
    padding 0
  a
    align-items flex-start
    display flex
    max-width 140px
    padding 1.25rem 0.5rem
    text-decoration none
  &.navbar-colored
    background-color $color-navbar-colored
    .navbar-header
    a
      color $color-white

