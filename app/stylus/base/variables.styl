// Color palette
  // Main colors from http://www.google.com/design/spec/style/color.html#color-color-palette
  // Choose a two color palettes and override this section
  // Default is Teal (primary) + Purple (secondary)

$color-primary       = #009688
$color-primary-dark  = #00796B
$color-primary-light = #B2DFDB

$color-secondary       = #607d8b
$color-secondary-dark  = #263238
$color-secondary-light = #b0bec5

$color-black = #000000
$color-white = #ffffff

$color-grey       = #e0e0e0
$color-grey-light = #FAFAFA
$color-grey-dark  = #9e9e9e

///



// Components Variables
$color-background = $color-grey

$color-text-primary   = rgba($color-black, .87)
$color-text-secondary = rgba($color-black, .54)
$color-text-disabled  = rgba($color-black, .26)
$color-text-inverse   = rgba($color-white, .87)

$color-divider         = rgba($color-black, .12)
$color-divider-inverse = rgba($color-white, .12)

$color-card = $color-white

$height-navbar        = 50px
$color-navbar         = $color-white
$color-navbar-colored = $color-primary

$color-menubar              = $color-secondary-dark
$color-menubar-text         = $color-grey-dark
$color-menubar-active       = $color-primary
$color-menubar-text-active  = $color-white

$color-button-primary = $color-primary
$color-button-wave    = rgba($color-secondary-light, .12)

$spinner-size              = 72px
$spinner-border-width      = 6px
$spinner-track-color       = rgba($color-primary, 0.2)
$spinner-track-piece-color = rgba($color-primary, 0.8)
$spinner-speed             = 0.6s;

$color-footer           = $color-secondary-dark
$color-footer-copyright = $color-primary-dark

// Font config

$font-size            = 16px
$font-family          = 'Roboto', sans-serif
$font-family-headings = 'Roboto', sans-serif

// Other options

$sticky-footer = false